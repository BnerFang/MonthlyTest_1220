<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:id="@+id/goods_img"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/goods_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/goods_img"
        android:textSize="24sp"
        android:text="XXXXX"
        android:lines="2"
        android:layout_margin="5dp"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="￥："
        android:lines="1"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:textColor="#f00"
        android:layout_below="@id/xl"
        android:layout_toRightOf="@id/goods_img"/>
    <TextView
        android:id="@+id/goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:lines="1"
        android:text="XXXXX"
        android:layout_margin="5dp"
        android:layout_below="@id/xl"
        android:ellipsize="end"
        android:textColor="#f00"
        android:layout_toRightOf="@id/$"/>
    <TextView
        android:id="@+id/xl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="销量： "
        android:lines="1"
        android:layout_margin="8dp"
        android:ellipsize="end"
        android:textColor="#1500ff"
        android:layout_below="@id/goods_title"
        android:layout_toRightOf="@id/goods_img"/>
    <TextView
        android:id="@+id/goods_salenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:lines="1"
        android:text="XXXXX"
        android:layout_margin="8dp"
        android:layout_below="@id/goods_title"
        android:ellipsize="end"
        android:textColor="#1e24dc"
        android:layout_toRightOf="@id/$"/>

    <Button
        android:id="@+id/add_car"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/add_car"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/$"
        android:layout_marginRight="10dp"/>


</RelativeLayout>